<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.tomlockapps.userbrowser.users.UsersFragment">

    <data>

        <import type="com.tomlockapps.userbrowser.data.source.UserDataSource" />

        <variable
            name="itemModel"
            type="com.tomlockapps.userbrowser.data.IUserModel" />

        <variable
            name="viewmodel"
            type="com.tomlockapps.userbrowser.users.UsersViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:onClick="@{() -> viewmodel.onItemClick(itemModel)}"
        card_view:cardBackgroundColor="@{(itemModel.sourceType == UserDataSource.GITHUB ? @color/userColorLime : @color/userColorBlue)}"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="1dp">

            <ImageView
                android:id="@+id/item_user_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"
                android:transitionName="profile"
                app:imageTransformType='@{"centerCrop"}'
                app:imageUrl="@{itemModel.avatarUrl}" />

            <TextView
                android:id="@+id/item_user_name"
                style="@style/ItemTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/item_user_image"
                android:paddingBottom="8dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:text="@{itemModel.name}"
                app:layout_constraintBottom_toBottomOf="@+id/item_user_image"
                app:layout_constraintEnd_toEndOf="@+id/item_user_image"
                app:layout_constraintStart_toStartOf="@+id/item_user_image" />

            <TextView
                android:id="@+id/item_user_source"
                style="@style/ItemTextStyleSource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:text="@{(itemModel.sourceType == UserDataSource.GITHUB ? @string/github_abbrev : @string/dailymotion_abbrev)}"
                app:layout_constraintEnd_toEndOf="@+id/item_user_image"
                app:layout_constraintTop_toTopOf="@+id/item_user_image"
                android:layout_marginRight="8dp" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>